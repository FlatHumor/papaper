<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/article_background"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/list_item_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_list_item_article_title"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_article_published_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/t_list_item_article_published_at"
        android:textAlignment="viewEnd"
        android:textColor="#666666"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/list_item_article_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/mei_placeholder" />

    <TextView
        android:id="@+id/list_item_article_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/t_list_item_article_description"
        android:textColor="#222222" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/list_item_article_save"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/favorite_button" />

        <ImageView
            android:id="@+id/list_item_article_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/share_button" />

        <TextView
            android:id="@+id/list_item_article_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/t_list_item_article_more"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textColor="#2b7bba"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>