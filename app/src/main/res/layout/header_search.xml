<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/nbg1"
    android:orientation="horizontal"
    android:padding="10dp">

    <EditText
        android:id="@+id/header_search_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/search_string_bg"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textColor="#aaffffff"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/header_search_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@id/header_search_string"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/search_contour_button" />

</RelativeLayout>